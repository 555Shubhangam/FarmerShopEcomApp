<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="screen_bg" parent="screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>

    <style name="toolbar_title" parent="text_view">
        <item name="android:textColor">@color/white</item>
        <item name="android:text">Title</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="text_view_multiline">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">5</item>
    </style>

    <style name="btn_add">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_plus_minus">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_orange" parent="button">
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_green" parent="button">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="linear_layout_vertical" parent="linear_layout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="linear_layout_horizontal" parent="linear_layout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="img" parent="image_view">

    </style>
    <style name="img_icon" parent="image_view">

    </style>

    <style name="tab_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="view_pager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_default" parent="edit_text">
        <item name="android:layout_height">40dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="edit_text_bordered" parent="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="background">@drawable/edittext_border</item>
    </style>
    <style name="edit_text_bordered_black" parent="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/edittext_border_black</item>
    </style>

    <style name="edit_text_label" parent="text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="heading" parent="text_view">
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>