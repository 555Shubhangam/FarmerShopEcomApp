<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/card_layout"
        android:background="@color/colorGray3">

        <LinearLayout
            style="@style/layoutSimple"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="0">

            <LinearLayout
                style="@style/layoutSimple"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_3sdp"
                android:layout_weight="1.8">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:elevation="@dimen/_5sdp"
                    android:padding="@dimen/_4sdp"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvQtyOrderSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:padding="@dimen/_3sdp"
                            android:text="QTY: 1"
                            android:textColor="@color/black"
                            android:textStyle="bold" />


                        <ImageView
                            android:id="@+id/image"
                            style="@style/image_view"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/tvQtyOrderSummary"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@string/vegimage"
                            android:src="@drawable/veg1" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                style="@style/layoutSimple"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="@string/mix_vegitable"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvquantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="start|center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="@string/_2_kg"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_11ssp" />

                <LinearLayout
                    style="@style/layoutSimple"
                    android:orientation="horizontal"
                    android:weightSum="0">

                    <TextView
                        android:id="@+id/tvProductDiscountPrice"
                        style="@style/txtMonBold"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:text="₹350"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_350"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        style="@style/txtMonBold"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="You Save ₹35.00"
                        android:textColor="@color/colorAppMain"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSoldBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="Sold By Farmer Shop"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:id="@+id/tvDeliveredBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="start|center"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:text="Delivery Between 15th July to 20th July"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</layout>