<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutCategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:weightSum="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <include
                        android:id="@+id/toolbar"
                        layout="@layout/include_toolbar"/>
                    <LinearLayout
                        android:id="@+id/layoutTotalItem"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="0"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout

                            android:orientation="horizontal"
                            android:layout_weight="1"
                            style="@style/layoutSimple">
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:text="@string/vegitables_basket"
                                android:textSize="13sp"
                                />
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                android:id="@+id/category"
                                style="@style/txtMonBold"
                                android:textColor="@color/colorGray2"
                                android:text="@string/_5_items"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            style="@style/layoutSimple"
                            >
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:text="â‚¹3505.00"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/recycler_addToCart"
                        android:layout_width="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layoutTotalItem"
                        android:layout_height="wrap_content"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_addtocart" />
                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@+id/recycler_addToCart"
                        android:id="@+id/layoutCoupons"
                        android:weightSum="0"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            app:layout_constraintTop_toBottomOf="@+id/recycler_addToCart"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:padding="2dp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/tvCouponViewALl"
                            style="@style/txtMonBold"
                            android:text="@string/apply_coupon"
                            android:textSize="15sp"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:gravity="end"
                            android:padding="2dp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/tvCoupon"
                            style="@style/txtMonBold"
                            android:textColor="@color/colorRed"
                            android:text="@string/view_all"
                            android:textSize="15sp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@+id/layoutCoupons"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="0"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/layoutCoupon"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            style="@style/layoutSimple">
                            <EditText
                                android:drawableLeft="@drawable/discount"
                                android:background="@null"
                                android:drawableTint="@color/colorGray"
                                android:drawablePadding="@dimen/_10sdp"
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:textColor="@color/colorGray1"
                                android:text="Enter Coupon Code"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            style="@style/layoutSimple"
                            >
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:textColor="@color/colorGray"
                                android:text="@string/apply"
                                android:textSize="15sp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/gray"
                        android:id="@+id/ViewCoupon"
                        app:layout_constraintTop_toBottomOf="@+id/layoutCoupon"
                        />
                    <TextView
                        app:layout_constraintTop_toBottomOf="@+id/ViewCoupon"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:padding="2dp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/tvPaymentDetails"
                        style="@style/txtMonBold"
                        android:text="@string/payment_details"
                        android:textSize="15sp"
                        />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPaymentDetails"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="0"
                        android:id="@+id/layoutPaymentDetails"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            style="@style/layoutSimple">
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:textColor="@color/colorGray1"
                                android:text="@string/mrp_total"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            style="@style/layoutSimple"
                            >
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:text="â‚¹3505.00"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/gray"
                        android:id="@+id/View"
                        app:layout_constraintTop_toBottomOf="@+id/layoutPaymentDetails"
                        />
                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@+id/View"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="0"
                        android:id="@+id/layoutProductDiscount"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            style="@style/layoutSimple">
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:textColor="@color/colorGray1"
                                android:text="@string/total_discount"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            style="@style/layoutSimple"
                            >
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:text="- â‚¹3505.00"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/gray"
                        android:id="@+id/View1"
                        app:layout_constraintTop_toBottomOf="@+id/layoutProductDiscount"
                        />
                    <LinearLayout
                        app:layout_constraintTop_toBottomOf="@+id/View1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:orientation="horizontal"
                        android:weightSum="0"
                        android:id="@+id/layoutTotalAmount"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            style="@style/layoutSimple">
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:text="@string/total_amount"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:gravity="end"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            style="@style/layoutSimple"
                            >
                            <TextView
                                android:padding="2dp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:text="- â‚¹3505.00"
                                android:textSize="13sp"
                                />
                            <TextView
                                android:padding="2dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center_horizontal"
                                style="@style/txtMonBold"
                                android:textColor="@color/colorAppMain"
                                android:text="You Save  â‚¹3505.00"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/gray"
                        android:id="@+id/View2"
                        app:layout_constraintTop_toBottomOf="@+id/layoutTotalAmount"
                        />

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardElevation="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/View1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:orientation="horizontal"
                    android:weightSum="0"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        style="@style/layoutSimple">
                        <TextView
                            android:padding="2dp"
                            android:textColor="@color/colorGray"
                            android:gravity="center_horizontal"
                            style="@style/txtMonBold"
                            android:text="Payable Amount"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:padding="2dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            style="@style/txtMonBold"
                            android:textColor="@color/black"
                            android:text="â‚¹3505.00"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        style="@style/layoutSimple"
                        >
                        <TextView
                            android:paddingVertical="@dimen/_7sdp"
                            android:gravity="center"
                            android:id="@+id/tvProductAdd"
                            style="@style/btnMonSemiBold"
                            android:text="Place Order"
                            android:layout_width="@dimen/_100sdp"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>