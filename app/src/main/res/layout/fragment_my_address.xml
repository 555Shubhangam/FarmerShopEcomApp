<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mvvm_data.ui.fragment.MyAccountFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:id="@+id/layoutEditProfile"
        android:background="@color/colorGray4"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/LayoutUserProfile"
            app:layout_constraintRight_toLeftOf="@+id/layoutName"
            android:layout_width="wrap_content"
            android:background="@color/colorGray4"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/user"
            android:id="@+id/UserProfile"

          />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/layoutName"
            app:layout_constraintLeft_toRightOf="@+id/LayoutUserProfile"
            app:layout_constraintRight_toLeftOf="@+id/tvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:padding="2dp"
                android:id="@+id/tvName"
                android:gravity="start"
                style="@style/txtMonBold"
                android:layout_width="match_parent"
                android:text="Priya Upadhyay"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName"
                android:padding="2dp"
                android:id="@+id/tvEMAILID"
                style="@style/txtMonBold"
                android:textColor="@color/colorGray"
                android:text="priyaupadhyay@gmail.com"
                android:textSize="12sp"
                />
            <TextView
                android:textColor="@color/colorGray"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEMAILID"
                android:padding="2dp"
                android:id="@+id/tvPhoneNo"
                style="@style/txtMonBold"
                android:text="8178686896"
                android:textSize="12sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/layoutName"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:textColor="@color/colorAppMain"
                android:id="@+id/tvEditProfile"
                style="@style/txtMonBold"
                android:text="@string/edit"
                android:textSize="13sp"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="2dp"
        android:id="@+id/tvOrderHistory"
        app:layout_constraintTop_toBottomOf="@+id/layoutEditProfile"
        android:gravity="start"
        style="@style/txtMonBold"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableLeft="@drawable/ic_orderhistory"
        android:drawableTint="@color/colorAppMain"
        android:layout_width="match_parent"
        android:text="@string/order_history"
        android:textSize="15sp"
        />
    <View
        app:layout_constraintTop_toBottomOf="@+id/tvOrderHistory"
         android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:background="@color/colorGray2"
        android:layout_height="2dp"/>
    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="2dp"
        android:id="@+id/tvWishlist"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:gravity="start"
        style="@style/txtMonBold"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableLeft="@drawable/ic_fav"
        android:drawableTint="@color/colorAppMain"
        android:layout_width="match_parent"
        android:text="@string/wishlist"
        android:textSize="15sp"
        />
    <View
        android:id="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/tvWishlist"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/colorGray2"
        android:layout_height="2dp"/>

    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="2dp"
        android:id="@+id/tvDeliveryAddress"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:gravity="start"
        style="@style/txtMonBold"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableLeft="@drawable/ic_location"
        android:drawableTint="@color/colorAppMain"
        android:layout_width="match_parent"
        android:text="@string/delivery_address"
        android:textSize="15sp"
        />
    <View
        android:id="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/tvDeliveryAddress"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/colorGray2"
        android:layout_height="2dp"/>


    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="2dp"
        android:id="@+id/tvNeedHelp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:gravity="start"
        style="@style/txtMonBold"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:drawableLeft="@drawable/ic_help"
        android:drawableTint="@color/colorAppMain"
        android:layout_width="match_parent"
        android:text="Need Help"
        android:textSize="15sp"
        />
    <View
        android:id="@+id/view3"
        app:layout_constraintTop_toBottomOf="@+id/tvNeedHelp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:background="@color/colorGray2"
        android:layout_height="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>