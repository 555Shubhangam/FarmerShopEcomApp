<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.farmershop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera"
        tools:ignore="DuplicateUsesFeature" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        tools:ignore="DuplicateUsesFeature" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name=".ui.base.MyApp"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".ui.activity.setting.ChangePasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.auth.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.auth.ResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.FAQActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.OrderSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MyOrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MyOrderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.MyAddressActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.ProductDescriptionActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.EditAddressActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.AddToCartActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.MapActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.SearchLocationActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.auth.Register" />
        <activity android:name=".ui.activity.Profile" />
        <activity android:name=".ui.activity.auth.OTP" />
        <activity android:name=".ui.activity.auth.Login" />
        <activity
            android:name=".ui.activity.ExitActivity"
            android:screenOrientation="nosensor" />
        <activity android:name=".ui.activity.Home" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/GOOGLE_MAP_KEY_NEW" />
    </application>

</manifest>